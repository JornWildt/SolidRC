@{
    ViewData["Title"] = "Models";
}

<h1>Models</h1>

<div id="modelsApp">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModelDialog">Add new model</button>

  <table id="models" class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="model in models" v-bind:model="model" v-bind:key="model.id">
        <td><img width="16" height="16"></td>
        <td>{{model.name}}</td>
        <td><a href="#" v-on:click="deleteModel(model)"><img src="~/open-iconic/svg/circle-x.svg" alt="Remove" class="grid-action"></a></td>
      </tr>
    </tbody>
  </table>

  <div class="modal fade" id="addModelDialog" tabindex="-1" role="dialog" aria-labelledby="addModelDialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addModelDialogLabel">Add new model</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="selectedName">Name</label>
              <input v-model="selectedName" id="selectedName">
            </div>
          </form>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" v-on:click="addNewModel">Add</button>
        </div>
      </div>
    </div>
  </div>

</div>

@section Scripts
