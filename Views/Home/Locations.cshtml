  <!-- <script src="~/lib/moment/min/moment.min.js"></script>
  <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script> -->
  <script src="~/lib/vue/dist/vue.min.js"></script>
  <script src="~/lib/vuelidate/dist/vuelidate.min.js"></script>
  <script src="~/lib/vuelidate/dist/validators.min.js"></script>
  <script src="~/js/namespaces.js"></script>
  <script src="~/js/ORDFMapper.js"></script>
  <script src="~/js/locations.js"></script>
  <script src="~/js/locationRepository.js"></script>
}